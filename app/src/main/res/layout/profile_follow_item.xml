<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="@drawable/profile_follow_border"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_follow_image_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp"
        app:civ_border_color="@android:color/transparent"
        android:src="@drawable/iv_profile_follow_sample"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/profile_follow_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_gray_close"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profile_follow_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_follow_image_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/profile_follow_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ariana Grande"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/profile_text_size"
            />

        <ImageView
            android:id="@+id/profile_follow_certification_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_certificaiton_check"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram 추천"
        android:textSize="12sp"
        android:textColor="@color/basic_gray"
        app:layout_constraintTop_toBottomOf="@id/profile_follow_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/profile_follow_bt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="팔로우"
        android:textSize="@dimen/profile_text_size"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/blue_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>