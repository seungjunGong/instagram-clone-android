<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileTagFragment"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".src.main.profile.tab.ProFileTagFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profile_grid_item_layout_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/profile_tab_zero_tag_item_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원님이 나온 사진 및 \n동영상"
                android:gravity="center"
                android:textSize="@dimen/profile_title_size"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사람들이 회원님을 사진 및 동여상에\n태그하면 태그된 사진 및 동여상이 여기에\n표시됩니다."
                android:textSize="@dimen/profile_text_size"
                android:textColor="@color/basic_gray"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_tab_zero_post_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필"
                android:textSize="@dimen/profile_title_size"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진과 동영상을 공유하면 프로필에\n표시됩니다."
                android:textSize="@dimen/profile_text_size"
                android:textColor="@color/basic_gray"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/profile_tab_go_post_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첫 사진/동영상을 공유해보세요"
                android:layout_marginBottom="80dp"
                android:textColor="@color/basic_sky_blue"
                android:textSize="@dimen/profile_text_size"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:scrollbars="none" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/profile_vp_complete_profile_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_grid_item_layout_tag"
        app:layout_constraintStart_toStartOf="@id/profile_grid_item_layout_tag"
        app:layout_constraintEnd_toEndOf="@id/profile_grid_item_layout_tag">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필을 완성하세요"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/basic_margin_side"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/basic_margin_side">

            <TextView
                android:id="@+id/profile_vp_complete_profile_count_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/4개"
                android:textSize="12sp"
                android:textColor="@color/basic_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="완료"
                android:textColor="@color/basic_gray"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/profile_vp_complete_profile_count_tag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.softsquared.instagramlagame.util.NestedScrollableHost
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="@dimen/basic_margin_side">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/profile_name_add_tag"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="7dp"
                        >

                        <ImageView
                            android:id="@+id/profile_add_name_iv_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_name_add"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름 추가"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="친구들이 회원님을 알아볼 수 있도록\n이름과 성을 모두 추가하세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_name_bt_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="이름 추가"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/profile_image_add_tag"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/profile_add_image_iv_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_image_add"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="프로필 사진 추가"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Instagram에서 회원님을 나타낼\n프로필 사진을 선택하세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_image_bt_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="사진 추가"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_introduce_add_tag"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="7dp"
                        >

                        <ImageView
                            android:id="@+id/profile_add_introduce_iv_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_introduce_add"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="소개 추가"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="팔로워에게 회원님에 대해 간단히\n소개해주세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_introduce_bt_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="소개 추가"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_follow_add_tag"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="7dp"
                        >

                        <ImageView
                            android:id="@+id/profile_add_follow_iv_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_follow_add"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팔로우할 사람 찾기"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="관심 있는 사람 및 관심사를\n팔로우하세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_follow_bt_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="사람 찾기"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <!--수정 완료 된 것들-->

                    <LinearLayout
                        android:id="@+id/profile_name_add_correct_tag"
                        android:layout_width="200dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="7dp"
                        >

                        <ImageView
                            android:id="@+id/profile_add_name_correct_iv_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_name_add_correct"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름 추가"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="친구들이 회원님을 알아볼 수 있도록\n이름과 성을 모두 추가하세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_name_correct_bt_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="이름 수정"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_image_add_correct_tag"
                        android:layout_width="200dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/profile_add_image_correct_iv_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_image_add_correct"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="프로필 사진 추가"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Instagram에서 회원님을 나타낼\n프로필 사진을 선택하세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_image_correct_bt_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="사진 변경"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_introduce_add_correct_tag"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="7dp"
                        >

                        <ImageView
                            android:id="@+id/profile_add_introduce_correct_iv_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_introduce_add_correct"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="소개 추가"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="팔로워에게 회원님에 대해 간단히\n소개해주세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_introduce_correct_bt_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="소개 수정"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_follow_add_correct_tag"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/profile_follow_border"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="7dp"
                        >

                        <ImageView
                            android:id="@+id/profile_add_follow_iv_correct_tag"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_profile_follow_add"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팔로우할 사람 찾기"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="관심 있는 사람 및 관심사를\n팔로우하세요."
                            android:textSize="11sp"
                            android:textColor="@color/basic_gray"
                            />

                        <TextView
                            android:id="@+id/profile_add_follow_bt_correct_tag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:text="더 찾아보기"
                            android:textSize="@dimen/profile_text_size"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/blue_style"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>

        </com.softsquared.instagramlagame.util.NestedScrollableHost>



        <View
            android:id="@+id/profile_scroll_divider_tag"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/high_bright_gray"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile_nickName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>