<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/story_profile_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/basic_margin_top"
            android:background="@android:color/transparent"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/basic_profile_border_line"
            android:src="@drawable/ic_basic_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_add"
            android:background="@android:color/transparent"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            app:civ_circle_background_color="#0E9EF2"
            app:layout_constraintBottom_toBottomOf="@id/story_profile_iv"
            app:layout_constraintEnd_toEndOf="@id/story_profile_iv" />

        <TextView
            android:id="@+id/story_my_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 스토리"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/story_profile_iv"
            app:layout_constraintStart_toStartOf="@id/story_profile_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/story_profile_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>