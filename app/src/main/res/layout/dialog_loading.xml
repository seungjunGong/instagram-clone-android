<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bt_white">

    <ProgressBar
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:indeterminateDrawable="@anim/progress_lotate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:progressBackgroundTint="@color/basic_gray"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/loading_progressBar"/>



    <TextView
        android:text="등록 중..."
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/loading_progressBar"
        app:layout_constraintBottom_toBottomOf="@+id/loading_progressBar"
        app:layout_constraintStart_toEndOf="@+id/loading_progressBar"
        android:layout_marginStart="@dimen/basic_margin_side"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:textColor="@android:color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>