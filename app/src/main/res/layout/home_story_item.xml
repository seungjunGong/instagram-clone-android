<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/story_profile_other_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/basic_margin_top"
        android:background="@drawable/insta_inactived_border"
        android:padding="4dp"
        app:civ_border_overlay="true"
        app:civ_border_width="0dp"
        android:src="@drawable/ic_basic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/story_user_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zara"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/story_profile_other_iv"
        app:layout_constraintStart_toStartOf="@id/story_profile_other_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/story_profile_other_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>